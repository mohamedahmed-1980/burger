<div class="container">
    <h1>BURGERS!</h1>
    <div class="row text-center">
        <img
            src="https://www.pinclipart.com/picdir/big/52-521770_scfrenchfries-frenchfries-fastfood-hamburger-burger-french-fries-clipart.png">
    </div>


    <div class="row">
        <div class="col-md-6">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li> {{burger_name}} <button class="change-devour" data-id="{{id}}"> devour it!</button></li>
                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-md-6">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li> {{burger_name}} </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <form class="create-form">

        <div class="form-group">
            <input type="text" style="width: 250px" class="form" id="ca" name="name">
        </div>

        <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
</div>